<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upc.eseiaat.pma.kmamilles.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/labelKm"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:layout_marginStart="28dp"
        android:text="@string/kkm"
        android:textSize="18sp"
        tools:textSize="14sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/KmAMilles"
        android:layout_marginTop="44dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="41dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="28dp" />

    <Button
        android:id="@+id/KmAMilles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="@string/a_millas"
        tools:layout_goneMarginTop="10sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="121dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="36dp" />

    <TextView
        android:id="@+id/labelMilles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mill"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/labelKm"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/labelKm"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MillesAKm"
        android:layout_width="147dp"
        android:layout_height="48dp"
        android:layout_marginEnd="29dp"
        android:text="@string/a_km"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/KmAMilles"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="29dp" />

    <EditText
        android:id="@+id/EditMilles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginEnd="17dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/MillesAKm"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="41dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="17dp" />

    <EditText
        android:id="@+id/editKm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/labelMilles"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="16dp" />

</android.support.constraint.ConstraintLayout>
